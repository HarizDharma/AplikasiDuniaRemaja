<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_romance"
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/pink"
        android:text="Romance" />

    <Button
        android:id="@+id/btn_fantasy"
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@+id/btn_romance"
        android:background="@color/cyan"
        android:text="Fantasy" />

    <Button
        android:id="@+id/btn_action"
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/btn_romance"
        android:background="@color/red"
        android:text="Action" />

    <Button
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:text="Comedy"
        android:layout_toRightOf="@id/btn_action"
        android:layout_below="@+id/btn_fantasy"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/orange"
        android:id="@+id/btn_comedy" />

</RelativeLayout>